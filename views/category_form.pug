extends layout

block content

  h1(class="text-center font-weight-bold text-dark my-3") #{title}
          
  form(method='POST' action='' class="w-50 m-auto")
    div.form-group
      label(for='name' class="text-success font-weight-bold") Name:
      input#name.form-control(type='text', placeholder='Carts, balls, tees...' name='name' required='true' value=(undefined===cat ? '' : cat.name) )
    div.form-group
      label(for='description' class="text-success font-weight-bold") Description:
      input#description.form-control(type='text', placeholder='Add description' name='description' required='true' value=(undefined===cat ? '' : cat.description) )
    button.btn.btn-success(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg